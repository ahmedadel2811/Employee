@model List<EmployeeField>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Employee Custom Fields</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Field
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No custom fields available.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Required</th>
                        <th>Dropdown Options</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var field in Model)
                    {
                        <tr>
                            <td>@field.Name</td>
                            <td>
                                <span class="badge bg-primary">
                                    @Enum.GetName(typeof(WhiteLagoon.Application.Common.Enum.FieldType), field.Type)
                                </span>
                            </td>
                            <td>
                                @if (field.IsRequired)
                                {
                                    <span class="badge bg-danger">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(field.DropdownOptions))
                                {
                                    @foreach (var option in field.DropdownOptions.Split(','))
                                    {
                                        <span class="badge bg-light text-dark me-1">@option.Trim()</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@field.Id" class="btn btn-outline-info btn-sm me-1">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@field.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

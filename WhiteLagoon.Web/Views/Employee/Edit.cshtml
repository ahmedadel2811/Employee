@model WhiteLagoon.Domain.Entities.Employee

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .required-label::after {
        content: " *";
        color: red;
        font-weight: bold;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Employee</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@modelError.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Code -->
                <div class="mb-3">
                    <label class="form-label required-label">Code</label>
                    <input type="text" name="Code" value="@Model.Code" class="form-control" placeholder="Enter employee code" required />
                </div>

                <!-- Name -->
                <div class="mb-3">
                    <label class="form-label required-label">Name</label>
                    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Enter employee name" required />
                </div>

                <!-- Dynamic Fields -->
                @foreach (var field in (List<EmployeeField>)ViewBag.Fields)
                {
                    var existingValue = Model.FieldValues?.FirstOrDefault(v => v.FieldId == field.Id)?.Value ?? "";
                    bool isRequired = field.IsRequired; // Assuming you have an IsRequired property

                    <div class="mb-3">
                        <label class="form-label @(isRequired ? "required-label" : "")">@field.Name</label>

                        @if ((FieldType)field.Type == FieldType.String)
                        {
                            <input type="text" name="Field_@field.Id" value="@existingValue" class="form-control" placeholder="Enter @field.Name" @(isRequired ? "required" : "") />
                        }
                        else if ((FieldType)field.Type == FieldType.Integer)
                        {
                            <input type="number" name="Field_@field.Id" value="@existingValue" class="form-control" placeholder="Enter number" @(isRequired ? "required" : "") />
                        }
                        else if ((FieldType)field.Type == FieldType.Date)
                        {
                            <input type="date" name="Field_@field.Id" value="@existingValue" class="form-control" @(isRequired ? "required" : "") />
                        }
                        else if ((FieldType)field.Type == FieldType.Dropdown)
                        {
                            var options = (field.DropdownOptions ?? "").Split(',', StringSplitOptions.RemoveEmptyEntries);
                            <select name="Field_@field.Id" class="form-select" @(isRequired ? "required" : "")>
                                <option value="">-- Select --</option>
                                @foreach (var opt in options)
                                {
                                    <option value="@opt" selected="@(existingValue == opt)">@opt</option>
                                }
                            </select>
                        }
                    </div>
                }

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div style="margin-top:50px">
    <br />
</div>
